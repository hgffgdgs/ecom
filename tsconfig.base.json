{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@electropap/types": ["packages/types/src"],
      "@electropap/sdk": ["packages/sdk/src"],
      "@electropap/ui": ["packages/ui/src"],
      "@electropap/config": ["packages/config/src"]
    }
  }
}
